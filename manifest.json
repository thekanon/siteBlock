{
  "manifest_version": 3,
  "name": "사이트 접속 추적기",
  "version": "1.0",
  "description": "특정 사이트 접속을 추적하고 통계를 보여주는 확장 프로그램",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webNavigation",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "site block"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "block-page.html",
        "block-page.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}